<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

@{
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}

<div>

    @using (Html.BeginForm(FormMethod.Post))
    {
        @model Specter_System.Models.Entitys.Produtos

        <div id="top" class="row" style="padding-top: 3%">
            <div class="col-md-3" style="padding-left: 4%">
                <h2>Modalidade</h2>
            </div>
            <div class="col-lg-6">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.curso.Modalidade, new { @class = "form-control", placeholder = "Informe a modalidade do curso" })
                    <span class="input-group-btn">
                        <button class="btn btn-success" type="submit" name="action:Pesquisar">
                            Filtrar
                        </button>
                    </span>
                </div>
            </div>

            <div class="col-md-2">
                @Html.ActionLink("Novo Item", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>

        <div style="padding-left: 3%; padding-top: 3%">
            <table class="table" id="tabela" style="width: 95%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.curso.CursoId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.curso.Modalidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.curso.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.curso.Data)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.curso.Valor)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.cursos)
                    {
                        <tr>
                            <td style="width:5%">
                                @Html.DisplayFor(modelItem => item.CursoId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modalidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td style="width:15%">
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td style="width: 8%">
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td style="width: 20%">
                                @Html.ActionLink("Alterar", "Editar", new { nome = item.Nome }) |
                                @Html.ActionLink("Detalhar", "Detalhar", new { nome = item.Nome }) |
                                @Html.ActionLink("Excluir", "Deletar", new { nome = item.Nome })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</div>
