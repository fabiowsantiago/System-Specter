<!doctype html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CssAreaAluno/styleAreaAluno.css" rel="stylesheet" />
    <link href="~/Content/cssMedia/AreaAluno/mediaAreaAluno.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://getbootstrap.com/docs/4.1/assets/js/vendor/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div>
            <header>
                <div class="row">
                    <div class="col-md-8">
                        <img src="~/Models/imagens/icones/logoMarca.png" class="img" />
                    </div>
                    <div class="col-md-4 justify-content-end">
                        <a style="padding-top:1%"><img src="~/Models/imagens/icones/Boneco Login(1).png" /></a>
                        <a style="color:black; font-weight:bolder; padding-top:2%">OLÁ!</a>
                        <a class="nomeAluno" style="padding-top:2%">@Session["nomePessoa"]</a>
                        <a href="@Url.Action("Sair", "AreaAluno")" title="Cancelar" class="btn btn-primary">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            SAIR
                        </a>
                        @*<a><input type="submit" class="btn btn-primary" style="width: 20%" href="~/Home/Index" value="SAIR"/></a>*@
                    </div>
                </div>
            </header>
        </div>
        <div>
            <div class="menu" style="width:16%">
                <ul class="nav flex-column">
                    <li class="nav-item" style="background-color:#E0FFFF">
                        <a class="flex-sm-fill nav-link active" href="~/AreaAluno/Index" style="color:black">ÍNICIO</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" style="color:black" href="#" role="button" aria-haspopup="true" aria-expanded="false">MEUS CURSOS</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/AreaAluno/CursosOnline">Online</a>
                            <a class="dropdown-item" href="~/AreaAluno/ExibirCertificados">Presencial</a>
                        </div>
                    </li>
                    <li class="nav-item" style="background-color:#E0FFFF">
                        <a class="flex-sm-fill nav-link active" href="~/CursosAluno/Index" style="color: black">ALTERAR MEUS DADOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="flex-sm-fill nav-link active" href="~/AreaAluno/AlterarSenha" style="color: black">ALTERAR SENHA</a>
                    </li>
                    <li class="nav-item" style="background-color:#E0FFFF">
                        <a class="flex-sm-fill nav-link active" href="~/AreaAluno/CarrinhoCompra" style="color:black">MEU CARRINHO</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           data-toggle="dropdown"
                           href="#" role="button"
                           aria-haspopup="true"
                           aria-expanded="false"
                           style="color:black">INSCRIÇÃO</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/AreaAluno/IntegrarGrupo">Integrar Grupo</a>
                        </div>
                    </li>
                    <li class="nav-item" style="background-color:#E0FFFF">
                        <a class="flax-sm-fill nav-link active" href="~/AreaAluno/ConsultarPagamento" style="color: black">CONSULTAR PAGAMENTO</a>
                    </li>
                </ul>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>