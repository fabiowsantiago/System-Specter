<head>
    <title>Expert Nutri</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</head>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Specter_System.Models.Entitys.Pessoa
<div style="padding-top: 15%">
    @{
        using (Html.BeginForm("CadastrarPessoa", "Home", null, FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div>
                <div class="form-group row justify-content-md-center" style="padding-top: 2%">
                    <label class="col-sm-2 col-form-label">Nome</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Digite o nome completo", @required = "required" })
                    </div>
                </div>
                <div class="form-group row justify-content-md-center">
                    <label class="col-sm-2 col-form-label">CPF</label>
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @placeholder = "000.000.000-00", data_tipo = "cpf", @required = "required" } })
                    </div>
                </div>
                <div class="form-group row justify-content-md-center">
                    <label class="col-sm-2 col-form-label">Data de Nascimento</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Nascimento, new { @class = "form-control", @type = "date" })
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-2 col-form-label">Profissão</label>
                    <div class="col-sm-4">
                        <select class="dropdown">
                            <option class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                [Selecione]
                            </option>
                            <option class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ESTUDANTE
                            </option>
                            <option class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                NUTRICIONISTA
                            </option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="form-group row justify-content-md-center" , style="padding-left:15%">
                    <button type="submit" class="btn btn-primary" name="action:CadastrarPessoa" style="background:#002060;">CADASTRAR</button>
                </div>
            </div>

            if (!string.IsNullOrWhiteSpace(ViewBag.Resposta))
            {
                <script>alert('@ViewBag.Resposta');</script>
            }

        }
    }
   
</div>
