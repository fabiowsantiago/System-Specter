<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
</head>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Specter_System.Models.Entitys.Usuario

@{
    IDictionary<string, object> options = new Dictionary<string, object>();
    options.Add("data-val", "true");
    options.Add("required", "Campo obrigatório.");
    options.Add("class", "form-control");

    using (Html.BeginForm("Cadastrar", "CadastroUsuario", null, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div style="padding-top: 2%">


            <h5 style="padding-left:40%">CADASTRO DE USUÁRIO</h5><br />
            <div class="form-group row justify-content-center">
                <label class="col-sm-2 col-form-label">Nome Completo</label>
                <div class="col-sm-4">
                    @Html.DisplayFor(model => model.Pessoa, new { @class = "form-control" })
                    @*@Html.TextBoxFor(model => model.Pessoa, new { @class = "form-control", @placeholder = "Nome completo", @disabled = "disabled" })*@
                </div>
            </div>
            <div class="form-group row justify-content-md-center">
                <label class="col-sm-2 col-form-label">Seu E-mail</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Email, options)

                </div>
            </div>
            <div class="form-group row justify-content-md-center">
                <label class="col-sm-2 col-form-label">Nova Senha</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Digite uma nova senha", @type = "password", @required = "required" })
                </div>
            </div>
            <div class="form-group row justify-content-md-center">
                <label class="col-sm-2 col-form-label">Confirmar Senha</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.ConfirmarSenha, new { @class = "form-control", @placeholder = "Confirme sua senha", @type = "password", @required = "required" })
                </div>
            </div>
            <br />
            @*<div class="form-group row justify-content-center">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    @Html.DisplayFor(model => model.Resposta)
                </div>
            </div>*@
            <div class="form-group row justify-content-md-center" , style="padding-left:15%">
                <button type="submit" class="btn btn-primary" style="background:#002060;">CADASTRAR</button>
            </div>
        </div>

    }
}