<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styleAreaAluno.css" rel="stylesheet" />
</head>

@{
    Layout = "~/Views/Shared/_LayoutAreaAluno.cshtml";
}

@model Specter_System.Models.Entitys.Usuario

@using (Html.BeginForm("Alterar", "AlterarSenha", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div style="padding-top: 11%; padding-left: 25%;">
        <div style=" border: 1px solid #c0c0c0">
            <div style="padding-left:2%;padding-top:2%">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">INFORME SEU CPF</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.CpfPessoa, new { @class = "form-control", @placeholder = "Informe seu CPF por questões de segurança", @required = "required" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">INFORME A SENHA ATUAL</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.SenhaAtual, new { @class = "form-control", @placeholder = "Digite sua senha atual", @type = "password", @required = "required",autocomplete="off" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">INFORME A NOVA SENHA</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Digite a nova senha", @type = "password", @required = "required",autocomplete="off" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">CONFIRME A SENHA</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.ConfirmarSenha, new { @class = "form-control", @placeholder = "Redigite a nova senha", @type = "password", @required = "required",autocomplete="off" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Resposta)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-5">

                    </div>
                    <div class="col-sm-3">
                        <button type="submit" class="btn btn-primary" name="action:AlterarSenha" style=" background-color: #002060">ALTERAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}