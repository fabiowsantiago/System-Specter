<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CssAreaAluno/styleAreaAluno.css" rel="stylesheet" />
</head>

@{
    Layout = "~/Views/Shared/_LayoutAreaAluno.cshtml";
}

@model Specter_System.Models.Entitys.Produto

<div  style="padding-top: 9%;padding-left: 25%">

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="modal-body">
            <h4>Carrinho de Compra</h4>
            <hr />
            <div class="form-horizontal">
                <div>
                    @Html.HiddenFor(model => model.Nome)
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Nome)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Palestrante, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Palestrante)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Modalidade, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Modalidade)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Data, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Data)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Horario, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Horario)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Valor, new { @class = "control-label col-md-2" })
                    <div class="col-sm-6">
                        R$ @Html.DisplayFor(model => model.Valor)
                    </div>
                </div>
            </div>
            <div style="padding-left: 40%">
                @Html.ActionLink("Continuar", "Inscricao", "Inscricao", new { @class = "btn btn-success" })
            </div>

        </div>
    }
</div>