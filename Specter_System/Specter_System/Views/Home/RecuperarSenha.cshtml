<head>
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/styleHome.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <script src="~/Scripts/Validacoes.js"></script>
    <script src="~/Scripts/ScriptsMensagens.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Specter_System.Models.Entitys.Usuario

@using (Html.BeginForm(FormMethod.Post))
{
    <div style="padding-top: 15%;" class="container" position:center">
        <h3>Recuperar senha</h3>
    </div>
    <div class="container" position:center" style="padding-top: 2%;">
        <div style="display:inline" id="formDados">
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">Nome</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.Pessoa, new { @class = "form-control", @placeholder = "Informe seu nome completo", @required = "required" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">CPF</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.CpfPessoa, new
                    {
                        @class = "form-control",
                        @required = "required",
                        @id = "cpf",
                        @onkeydown = "javascript: fMasc( this, mCPF )",
                        @Onblur = "javascript: ValidarCpf(this)",
                        @placeholder = "000.000.000-00"
                    })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3"></label>
                <div class="col-sm-4">
                    <button class="btn btn-success" name="action:RecuperarSenha">Gerar Código</button>
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/tiny");
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        RecuperarSenha("@ViewBag.Message")
    </script>
}