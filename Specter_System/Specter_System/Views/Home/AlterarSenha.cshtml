<head>
    <script src="~/Content/bootstrap.min.js"></script>
    <link href="~/Content/styleHome.css" rel="stylesheet" />

    <script src="~/Scripts/ScriptsMensagens.js"></script>
</head>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Specter_System.Models.Entitys.Usuario

<div class="container" style="padding-top: 16%">
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">CPF</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.CpfPessoa, new { @class = "form-control" })
            </div>
        </div>

        <div id="formAlterarSenha">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Nova Senha</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Digite uma nova senha", @type = "password" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Confirmar senha</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.ConfirmarSenha, new { @class = "form-control", @placeholder = "Digite novamente uma nova senha", @type = "password" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Código</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.codSenha, new { @class = "form-control", @placeholder = "Digite o código informado no e-mail" })
                </div>
            </div>
            <div class="form-group row" style="padding-top: 3%">
                <div class="col-sm-3 col-form-label"></div>
                <div class="col-sm-4">
                    <button name="action:AlterarSenha" class="btn btn-success">ALTERAR SENHA</button>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        RecuperarSenha("@ViewBag.Message")
    </script>
}

